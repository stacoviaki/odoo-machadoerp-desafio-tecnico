<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seq_abastecimento" model="ir.sequence">
        <field name="name">Abastecimento</field>
        <field name="code">controle.abastecimento</field>
        <field name="prefix">ABAST/</field>
        <field name="padding">5</field>
    </record>

    <record id="view_abastecimento_tree" model="ir.ui.view">
        <field name="name">controle.abastecimento.tree</field>
        <field name="model">controle.abastecimento</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="data_hora"/>
                <field name="equipamento_id"/>
                <field name="placa"/>
                <field name="motorista_id"/>
                <field name="litros"/>
                <field name="valor_total"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_abastecimento_form" model="ir.ui.view">
        <field name="name">controle.abastecimento.form</field>
        <field name="model">controle.abastecimento</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirmar" string="Confirmar" type="object" class="btn-primary" invisible="state == 'confirmado'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="equipamento_id"/>
                            <field name="placa"/>
                            <field name="data_hora"/>
                        </group>
                        <group>
                            <field name="odometro"/>
                            <field name="litros"/>
                            <field name="valor_litro"/>
                            <field name="valor_total" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="motorista_id"/>
                        <field name="usuario_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_abastecimento" model="ir.actions.act_window">
        <field name="name">Abastecimentos</field>
        <field name="res_model">controle.abastecimento</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
